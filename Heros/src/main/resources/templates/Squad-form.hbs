{{#partial "content"}}
      <form action="/squads/new" method="post">
         <div class="modal-dialog cascading-modal" role="document">
             <div class="modal-content">
                 <div class="modal-header teal darken-4 white-text">
                     <h4 class="title">
                         <i class="fa fa-pencil-alt"></i> Squad Details</h4>
                     <a href="/">
                         <button type="button" class="close waves-effect waves-light" data-dismiss="modal" aria-label="Close">
                             <span aria-hidden="true">Ã—</span>
                         </button>
                     </a>
                 </div>
                 <div class="modal-body">
                     <div class="md-form form-sm">
                         <i class="fas fa-users"> Squad Name</i>
                         <input type="text" name="squadName" class="form-control form-control-sm" placeholder="e.g. Avengers">
                     </div>
                     <div class="md-form form-sm">
                         <i class="fas fa-bullseye"> Theme</i>
                         <input type="text" name="theme" class="form-control form-control-sm" placeholder="e.g. Avengers assemble">
                     </div>
                     <div class="md-form form-sm">
                         <i class="fab fa-studiovinari"> Squad hero capacity</i>
                         <input type="number" name="max" class="form-control form-control-sm" placeholder="e.g. 20">
                     </div>
                     <div class="text-center mt-4 mb-2">
                         <button class="btn btn-outline-teal darken-4" type="submit">Add
                             <i class="fa fa-send ml-2"></i>
                         </button>
                     </div>

                 </div>
             </div>
         </div>
     </form>

{{/partial}}
{{> layout.hbs}}